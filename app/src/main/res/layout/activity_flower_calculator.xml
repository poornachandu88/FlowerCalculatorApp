<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <Button
        android:id="@+id/btnList"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/color7"
        android:text="View Customers List"
        android:textColor="@android:color/holo_red_light"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mywebsite"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/color10"
        android:text="Go To Movie Site"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="Date :"
            android:id="@+id/textViewDate"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            app:fontFamily="serif"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:enabled="false"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCustomerName"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="CustomerName :"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <EditText
        android:id="@+id/editTextCustomerName"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <TextView
        android:id="@+id/textViewMobileNo"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="MobileNo :"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCustomerName" />
        <EditText
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="14sp"
            android:ems="10"
            android:id="@+id/editTextMobileNo"
            app:layout_constraintEnd_toEndOf="parent" 
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCustomerName"/>

    <TextView
        android:id="@+id/textViewCost"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Cost :"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMobileNo" />
        <EditText
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:singleLine="true"
            android:text="" android:textSize="14sp"
            android:ems="10"
            android:id="@+id/editTextCost" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMobileNo"/>

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Quantity :"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCost" />
        <EditText
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:singleLine="true"
            android:text="" android:textSize="14sp"
            android:ems="10"
            android:id="@+id/editTextQuantity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCost"/>

    <Button
        android:id="@+id/btnTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary3"
        android:text="Total :"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuantity" />


    <EditText
        android:id="@+id/editTextTotal"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:textColor="@android:color/black"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextQuantity" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="24dp"
        android:background="@color/color2"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTotal" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTotal" />




    </android.support.constraint.ConstraintLayout>
